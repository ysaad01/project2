<div class="container">
  <div class="row d-flex align-items-center min-vh-100">
    <div class="col-md-6 col-md-offset-3 mx-auto" id="log-sign">
      <br />
      <h2>Welcome to Doggy Hotel!</h2>
      <form class="signup" id="signup-form">
        <div class="form-group">
          <label for="exampleInputFirstName1">Username</label>
          <input
            type="text"
            class="form-control"
            id="username-signup"
            placeholder="John"
          />
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Email Address</label>
          <input
            type="email"
            class="form-control"
            id="email-signup"
            placeholder="johndoe@doglover.com"
          />
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input
            type="password"
            class="form-control"
            id="password-signup"
            placeholder="password"
          />
        </div>
        <div
          style="display: none"
          id="alert"
          class="alert alert-danger"
          role="alert"
        >
          <span
            class="glyphicon glyphicon-exclamation-sign"
            aria-hidden="true"
          ></span>
          <span class="sr-only">Error:</span>
          <span class="msg"></span>
        </div>
        <br />
        <button type="submit" class="btn btn-light">Sign Up</button>
      </form>
      <br />
      <p>Already have an Account? Click <a href="/login">Here</a> to Login!</p>
    </div>
  </div>
</div>

<script
  src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"
></script>
<script type="text/javascript" src="/js/signup.js"></script>