<div class="container" id="login-form">
  <div class="row mx-auto d-flex align-items-center min-vh-100">
    <div class="col-md-6 col-md-offset-3 mx-auto" id="log-sign">
      <br />
      <h2>Welcome back!</h2>
      <form class="login">
        <div class="form-group">
          <label for="exampleInputEmail1">Email Address</label>
          <input
            type="email"
            class="form-control"
            id="email-input"
            placeholder="Email"
          />
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input
            type="password"
            class="form-control"
            id="password-input"
            placeholder="Password"
          />
        </div>
        <br />
        <button type="submit" class="btn btn-light">Login</button>
      </form>
      <br />
      <p>First time here? Click <a href="signup">here</a> to sign up!</p>
    </div>
  </div>
</div>

<script
  src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"
></script>
<script type="text/javascript" src="public\js\login.js"></script>